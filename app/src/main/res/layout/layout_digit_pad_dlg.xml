<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f4f5" >

    <!-- 타이틀바 -->

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <!-- 서브 타이틀 -->

    <RelativeLayout
        android:id="@+id/rl_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title_bar" >

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="36.7dp"
            android:background="#0d4570"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:scrollbarDefaultDelayBeforeFade="1000"
            android:text="OneShotPad 설정"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_menu_close_clear_cancel" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sc_label"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/rl_sub_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="36.7dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="비밀번호 등록"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="비밀번호를 입력하여 주세오."
                android:textColor="#333333"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <!-- 입력된 비번 창 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sc_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_input1"
            android:layout_width="63.3dp"
            android:layout_height="70dp"
            android:background="@drawable/form_input"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/iv_input2"
            android:layout_width="63.3dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/form_input"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/iv_input3"
            android:layout_width="63.3dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/form_input"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/iv_input4"
            android:layout_width="63.3dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/form_input"
            android:scaleType="center" />
    </LinearLayout>

    <!-- 키패드 영역 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#232323"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_num0"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <TextView
                android:id="@+id/tv_num3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="4"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <TextView
                android:id="@+id/tv_num6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="7"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <ImageView
                android:id="@+id/tv_num_back"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#8c9195"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/del_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_num1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="2"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <TextView
                android:id="@+id/tv_num4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="5"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <TextView
                android:id="@+id/tv_num7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="8"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <TextView
                android:id="@+id/tv_num9"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:textSize="46.7dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_num2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="3"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <TextView
                android:id="@+id/tv_num5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="6"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <TextView
                android:id="@+id/tv_num8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#474c4f"
                android:gravity="center"
                android:text="9"
                android:textColor="#fff"
                android:textSize="46.7dp" />

            <TextView
                android:id="@+id/tv_num_ok"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:background="#1474be"
                android:gravity="center"
                android:text="확인"
                android:textColor="#fff"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>